<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>ServletGinf</servlet-name>
        <servlet-class>servlet.ServletGinf</servlet-class>
        <multipart-config>
            <max-file-size>418018841</max-file-size>
            <max-request-size>418018841</max-request-size>
            <file-size-threshold>418018841</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>ServletDeletar</servlet-name>
        <servlet-class>servlet.ServletDeletar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlet.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletPostagem</servlet-name>
        <servlet-class>servlet.ServletPostagem</servlet-class>
        <multipart-config>
            <max-file-size>418018841</max-file-size>
            <max-request-size>418018841</max-request-size>
            <file-size-threshold>418018841</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletPostagem</servlet-name>
        <url-pattern>/ServletPostagem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletGinf</servlet-name>
        <url-pattern>/ServletGinf</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletDeletar</servlet-name>
        <url-pattern>/ServletDeletar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
</web-app>
